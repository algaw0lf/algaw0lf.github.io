html, body {
  width: 100%;
  @apply font-sans uppercase antialiased text-gray-900 bg-gray-100 overflow-y-hidden overflow-x-hidden;
}

img, video {
  @apply object-cover object-center;  
}

* {
  @apply relative z-10;
}

h1 {
  @apply font-black text-3xl tracking-wide6;
}



::-webkit-scrollbar {
  @apply w-3 h-2;
}

::-webkit-scrollbar-track {
  @apply bg-gray-800;
}

::-webkit-scrollbar-thumb {
  @apply bg-white;
}

::-webkit-scrollbar-thumb:hover {
  @apply bg-secondary-500;
}
