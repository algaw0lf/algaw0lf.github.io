html, body {
  width: 100%;
  @apply font-sans antialiased text-gray-900 bg-gray-100 overflow-x-hidden;
}

img, video {
  @apply object-cover object-center;  
}

* {
  @apply relative z-10;
}

::-webkit-scrollbar {
  @apply w-3 h-2;
}

::-webkit-scrollbar-track {
  @apply bg-gray-900;
}

::-webkit-scrollbar-thumb {
  /* @apply bg-primary-500; */
  @apply bg-white;
}

::-webkit-scrollbar-thumb:hover {
  @apply bg-secondary-500;
}
