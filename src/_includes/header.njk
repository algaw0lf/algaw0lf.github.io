{% set currentPage = page.url %}

<header class="bg-white text-gray-900 z-40 gap-4" x-data="{ mobileNav: false }">
  <div class="container flex justify-between items-center py-2 max-w-7xl sm:px-8 md:px-16">

    <a href="/" class="w-56 md:none items-center">
      <span class="leading-none font-normal text-base tracking-wide6 hidden md:block">
        ALGA<span class="font-bold -mr-3">WOLF</span>
      </span>
      <span class="transform scale-100 md:hidden">
        <img src="/assets/wolf.png">
      </span>
    </a>

    <a href="/">
      <span class="transform scale-100 hidden md:block">
        <img src="/assets/wolf.png">
      </span>
    </a>

    {# Nav Text Links #}
    <nav class="space-x-4 w-56 text-right tracking-wide6">
      {% for item in navigation.internal %}
        {% set isCurrentPage = item.link === currentPage %}
        {% set textColor = 'text-gray-400' if isCurrentPage else 'text-primary-black' %}
        <a class="text-sm transition-colors duration-200 hover:text-secondary-400 {{ textColor }}" href="{{ item.link }}">
          {{ item.name }}
        </a>
      {% endfor %}
    </nav>

