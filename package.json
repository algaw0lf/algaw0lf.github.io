  "scripts": {
    "clean": "rm -rf dist",
    "build": "cross-env NODE_ENV=production npm-run-all clean -p build:*",
    "dev": "cross-env NODE_ENV=development npm-run-all -p build:*",
    "build:ts": "tsc -w",
    "build:11ty": "eleventy --serve --quiet",
    "build:webpack": "webpack --watch",
    "analyze": "lit-analyzer"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "htmlWhitespaceSensitivity": "ignore"
  },
  "browserslist": "> 2%",
  "dependencies": {
    "@tailwindcss/jit": "^0.1.18",
    "animejs": "^3.2.1",
    "lazysizes": "^5.3.2",
    "lit": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
    "@tailwindcss/forms": "^0.3.2",
    "autoprefixer": "^10.2.5",
    "compression-webpack-plugin": "^7.1.2",
    "connect-gzip-static": "^2.1.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "cssnano": "^5.0.2",
    "date-fns": "^2.21.3",
    "markdown-it": "^12.0.6",
    "markdown-it-container": "^3.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "lit-analyzer": "^1.1.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^5.2.0",
    "postcss-nested": "^5.0.5",
    "tailwindcss": "^2.1.2",
    "tailwindcss-debug-screens": "^2.0.0",
    "ts-lit-plugin": "^1.2.1",
    "webpack": "^5.37.0",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "webpack-cli": "^4.7.0"
  }
}
